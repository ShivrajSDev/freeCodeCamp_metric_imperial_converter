{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": { "includeFiles" : [ "tests/**", "controllers/**"]}
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "views/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "server.js"
        }
    ]
}
